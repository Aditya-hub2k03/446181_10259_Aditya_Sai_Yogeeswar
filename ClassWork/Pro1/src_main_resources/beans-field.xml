<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="address" class="com.xmldi.fi.Address">
        <property name="city" value="Chicago"/>
        <property name="state" value="IL"/>
    </bean>

    <bean id="student" class="com.xmldi.fi.Student">
        <property name="id" value="103"/>
        <property name="name" value="Alice Johnson"/>
        <property name="address" ref="address"/>
        <property name="subjects">
            <array>
                <value>English</value>
                <value>Economics</value>
                <value>Art</value>
            </array>
        </property>
    </bean>
</beans>
