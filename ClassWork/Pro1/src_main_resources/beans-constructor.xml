<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



    <bean id="address" class="com.xmldi.ci.Address">
        <constructor-arg name="city" value="New York"/>
        <constructor-arg name="state" value="NY"/>
    </bean>

    <bean id="student" class="com.xmldi.ci.Student">
        <constructor-arg name="id" value="101"/>
        <constructor-arg name="name" value="John Doe"/>
        <constructor-arg name="address" ref="address"/>
        <constructor-arg name="subjects">
            <array>
                <value>Math</value>
                <value>Physics</value>
                <value>Chemistry</value>
            </array>
        </constructor-arg>
    </bean>
</beans>
